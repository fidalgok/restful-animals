<% include partials/header %>

<div class="ui container">
	<h1 class="ui dividing header">Edit <%= animal.name %></h1>
	<div class="row">
		<div class="ui three column grid">
			<div class="column"></div>
			<div class="column">
				<form class="ui form" action="/animals/<%= animal.id %>?_method=PUT" method="POST">
					<div class="field">
						<label>Animal's Name</label>
						<input type="text" name="animal[name]" placeholder="Name" value="<%= animal.name %>">
					</div>
					<div class="field">
						<label>Type of Animal</label>
						<input type="text" name="animal[type]" placeholder="Animal Type" value="<%= animal.type %>">
					</div>
					<div class="field">
						<label>Animal Picture</label>
						<input type="text" name="animal[image]" placeholder="image URL" value="<%= animal.image%>">
					</div>
					<div class="field">
						<label>Animal Says</label>
						<input type="text" name="animal[speak]" placeholder="What does this animal say?" value="<%= animal.speak%>">
					</div>
					<div class="field">
						<label>Birthday</label>
						<input type="date" name="animal[birthday]" 
							<% if(birthday){ %>
							value="<%= birthday%>">
						<% } else{ %> 
							value ="">
						<%}%>
					</div>
					<div class="field">
						<label>Description</label>
						<textarea name="animal[description]"> <%= animal.description%></textarea>
					</div>
					<button class="ui inverted green button"><i class="paw icon"></i>Edit Animal </button>
				</form>	
			</div>
			<div class="column"></div>

			
		</div>
	</div>
	
</div>


<% include partials/footer %>