<% include partials/header %>

<div class="ui container">
	<h1 class="ui dividing header">Add A New Animal</h1>
	<div class="row">
		<div class="ui three column grid">
			<div class="column"></div>
			<div class="column">
				<form class="ui form" action="/animals" method="POST">
					<div class="field">
						<label>Animal's Name</label>
						<input type="text" name="animal[name]" placeholder="Name">
					</div>
					<div class="field">
						<label>Type of Animal</label>
						<input type="text" name="animal[type]" placeholder="Animal Type">
					</div>
					<div class="field">
						<label>Animal Picture</label>
						<input type="text" name="animal[image]" placeholder="image URL">
					</div>
					<div class="field">
						<label>Animal Says</label>
						<input type="text" name="animal[speak]" placeholder="What does this animal say?">
					</div>
					<div class="field">
						<label>Birthday</label>
						<input type="date" name="animal[birthday]">
					</div>
					<div class="field">
						<label>Description</label>
						<textarea name="animal[description]"></textarea>
					</div>
					<button class="ui inverted green button"><i class="paw icon"></i>Add Animal </button>
				</form>	
			</div>
			<div class="column"></div>

			
		</div>
	</div>
	
</div>


<% include partials/footer %>